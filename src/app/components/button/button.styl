@import './../../../assets/stylus/_settings'

.button
    margin 0
    cursor pointer
    border none
    font-weight medium
    outline none
    background-color default-color
    color white
    border-radius 1px
    transition all 300ms ease
    &:hover
        background-color default-hover-color

    &.button--primary
        background-color primary-color
        &:hover
            background-color primary-hover-color
    &.button--secondary
        color black
        background-color secondary-color
        &:hover
            background-color secondary-hover-color
    &.button--radio
        color black
        background-color transparent
        &:hover
            background-color secondary-hover-color
    &.button--checkbox
        color black
        background-color transparent
        text-transform uppercase
        &:hover
            background-color transparent

.button--medium
    padding .5rem 1rem
    font-size 0.76rem

.button--big
    padding .8rem 1.2rem
    font-size 0.8rem

.button--square
    padding 1rem 1rem
    font-size 1rem

.button--checkbox
    height 100%
    width 100%

.button + .button
    margin-left .5rem

.capitalize
    text-transform capitalize

.uppercase
    text-transform uppercase

.margin-bottom
    margin-bottom 1rem
