@import './../../../assets/stylus/_settings'

.reports-header
    background-color primary-color
    color white
    padding-left 1rem

.table
    border-spacing 0
    border-collapse collapse

.table--header
    background-color background-dark
    color white

.table--header--item
    padding .5rem

.table--row--striped
    &:nth-child(2n + 1)
        background-color background-light
