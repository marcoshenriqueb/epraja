@import './../../../assets/stylus/_settings'

.table
    border-spacing 0
    border-collapse collapse
    font-family DaxlineMedium

.table--header
    background-color primary-color
    color white

.table--header--item
    padding .5rem
    border-left: 1px solid rgba(0, 0, 0, 0.2)
    &:first-child
        border-left: none

.table--header--blank-item
    background-color white

.table--row--column
    padding 0
    border-left 1px solid rgba(0, 0, 0, 0.2)
    &:first-of-type
        border-left none

.table--row--blank
    margin-bottom 2rem
    background-color background-light

    .table--row--blank--item
        width 100%
        height 15px
        background-color background-light-secondary

    &:last-child
        .table--row--blank--item
            display none

.table--row--striped
    &:nth-child(2n + 1)
        background-color background-light

.table--row--cell
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    height 1.6rem
    padding .75rem .5rem .5rem .5rem

.table--row--status
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    height 1.6rem
    padding 0
